<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="borderPane"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="aeropuertovuelos.FXMLDocumentController"
            prefWidth="800" prefHeight="600">

    <!-- CABECERA -->
    <top>
        <Label text="Aeropuerto Internacional de Daxing" 
               BorderPane.alignment="CENTER"
               style="-fx-alignment: center; -fx-padding: 15;">
            <font>
                <Font name="System Bold" size="22.0"/>
            </font>
        </Label>
    </top>

    <!-- PANEL IZQUIERDO (Botones de opciones) -->
    <left>
        <VBox spacing="10" prefWidth="150" style="-fx-padding: 15;">
            <children>
                <Button fx:id="btnAddVuelo" text="Añadir Vuelo" onAction="#onAddVuelo"/>
                <Button fx:id="btnEditVuelo" text="Editar Vuelo" onAction="#onEditVuelo"/>
                <Button fx:id="btnDeleteVuelo" text="Eliminar Vuelo" onAction="#onDeleteVuelo"/>
            </children>
        </VBox>
    </left>

    <!-- PANEL CENTRAL (Aquí se cargan las demás vistas) -->
    <center>
        <AnchorPane fx:id="panelCentral"/>
    </center>

</BorderPane>
